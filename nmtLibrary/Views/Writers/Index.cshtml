@{
    ViewData["Title"] = "Index";
}

<h2>nmtLibrary</h2>
<h3>Select a Writer to display their books</h3>

<div class="row">
    <div class="col-md-6">
        <h3>Writers</h3>
        <div class="data-grid">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-sm-8">
                            Name
                        </th>
                        <th class="col-sm-4">
                            Date of Birth
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="table-writers"></tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <h3>Books</h3>
        <div class="data-grid">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-sm-8">
                            Title
                        </th>
                        <th class="col-sm-4">
                            Year
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="table-books"></tbody>
            </table>
        </div>
    </div>
</div>

@section  Scripts {
    <script src="~/js/site.js"></script>
}